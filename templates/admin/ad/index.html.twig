{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des annonces</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th class="text-center">RÃ©servations</th>
                    <th class="text-center">Note</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ad in pagination.data %}
                    <tr>
                        <td>{{ad.id}}</td>
                        <td>{{ad.title}}</td>
                        <td>{{ad.author.fullName}}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ad.bookings | length }}</span>
                        </td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ad.avgRatings }}</span>
                        </td>
                        <td class="text-center">
                            <a href="{{path('admin_ads_edit', {'id':ad.id})}}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_ads_delete',{'id':ad.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            {% set pages = pagination.pages %}
            {% set page = pagination.page %}
            <ul class="pagination">
                <li class="page-item {% if page == 1 %}disabled{% endif %}">
                    <a class="page-link" href="{{path('admin_ads_index',{"page":page - 1})}}">&laquo;</a>
                </li>
                {% for i in 1..pages %}
                    <li class="page-item {% if page== i %}active{% endif %}">
                        <a class="page-link" href="{{path('admin_ads_index',{"page": i})}}">{{i}}</a>
                    </li>  
                {% endfor %}
            
                <li class="page-item {% if page == pages %}disabled{% endif %}">
                    <a class="page-link" href="{{path('admin_ads_index',{"page":page + 1})}}">&raquo;</a>
                </li>
            </ul>
        </div>




    </div>
{% endblock %}
